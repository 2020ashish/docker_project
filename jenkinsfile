pipeline{
    agent any
    stages {
        stage("run frontend") {
            step {
                echo 'executing yarn...'
                nodejs('Node-10.17) {
                    sh 'yarn install'   
            }
        }
    }
    stage("run backend") {
        steps {
            echo 'executing gradle...'
            withGradle() {
                sh './gralew -v'
            }
        }
    }
  }  
}
